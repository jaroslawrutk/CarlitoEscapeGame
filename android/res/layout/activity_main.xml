<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brentaureli.mariobros.Menu.MainActivity">

    <RelativeLayout
        android:id="@+id/linearLayout0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/carlito_main_menu"
        android:orientation="horizontal"
        android:padding="1dp"
        tools:ignore="MissingConstraints,contentDescription"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btn_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@layout/info" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rLayout2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="49dp">

            <Button
                android:id="@+id/bUtworzNowaGre"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@+id/bDolaczDoGry"
                android:layout_toStartOf="@+id/bDolaczDoGry"
                android:background="@drawable/newgame"
                android:padding="5dp" />

            <Button
                android:id="@+id/bDolaczDoGry"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/join_game"
                android:padding="5dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/bMario"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_toEndOf="@+id/bDolaczDoGry"
                android:layout_toRightOf="@+id/bDolaczDoGry"
                android:background="@drawable/singleplayer"
                tools:layout_editor_absoluteX="403dp"
                tools:layout_editor_absoluteY="297dp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnWlaczBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rLayout2"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignStart="@+id/linearLayout1"
            android:layout_gravity="center"
            android:layout_marginBottom="14dp"
            android:adjustViewBounds="false"
            android:background="@android:color/transparent"
            android:cropToPadding="true"
            android:padding="5dp"
            android:src="@layout/bluetooth" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
